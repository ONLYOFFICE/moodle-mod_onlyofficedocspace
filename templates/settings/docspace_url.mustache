{{!
    @template mod_onlyofficedocspace/settings/docspace_url

    Admin text setting template.

    Context variables required for this template:

    Example context (json): {}
}}
<div class="form-item row" id="{{rowid}}">
    <div class="form-label col-sm-3 text-sm-right">
        <label for="{{id}}">
            {{title}}
        </label>
        <span class="form-shortname d-block small text-muted">{{settingname}}</span>
    </div>
    <div class="form-setting col-sm-9">
        <div><span id="{{id}}-error" class="error hidden">{{error}}</span></div>
        
        <div class="form-text defaultsnext">
            <div class="input-wrapper">
                <input type="text" name="{{name}}" value="{{value}}" size="{{size}}" id="{{id}}" class="form-control">
                <button class="input-icon btn hidden" type="button">
                    <!-- Close icon (X) -->
                    &times;
                </button>
                <span id="input-check-icon" class="input-icon hidden">{{#pix}} check_mark, onlyofficedocspace {{/pix}}</span>
            </div>
            <button type="button" id="check-docspace-url-btn" class="btn btn-primary">
                <div class="spinner-border hidden" style="width:1rem;height:1rem;" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <div class="right-arrow">
                    {{#pix}} right-arrow, onlyofficedocspace {{/pix}}
                </div>
            </button>
        </div>

        <div class="form-description mt-3">
            <p>{{description}}</p>
        </div>
    </div>
</div>
