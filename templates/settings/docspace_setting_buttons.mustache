{{!
    @template mod_onlyofficedocspace/settings/docspace_setting_buttons

    Displays check Document Server connection button

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {}

}}
<div class="form-item row">
    <div class="form-setting col-sm-9 offset-sm-3">
        <div class="form-text defaultsnext">
            <button type="button"
                id="connect-docspace-btn"
                class="btn btn-primary hidden"
                >
                {{#str}}connect, mod_onlyofficedocspace{{/str}}
            </button>
            <div class="docspace-control-buttons">
                <button type="button"
                    id="change-docspace-btn"
                    class="btn btn-secondary"
                    >
                    {{#str}}change, mod_onlyofficedocspace{{/str}}
                </button>
                <button type="button"
                    id="disconnect-docspace-btn"
                    class="btn btn-secondary"
                    >
                    {{#str}}disconnect, mod_onlyofficedocspace{{/str}}
                </button>
            </div>
        </div>
    </div>
</div>
