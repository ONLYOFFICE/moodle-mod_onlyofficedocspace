<div class="d-flex flex-column" style="row-gap: 16px;">
  <p class="m-0">{{#str}} docspaceuserscategory:description, mod_onlyofficedocspace, Invite to DocSpace {{/str}}</p>
  {{#invitations}} {{{.}}} {{/invitations}}
  <table id="ds-invite-users-table" class="table table-striped m-0">
    <thead>
      <tr>
        <th scope="col"><input data-action="select-all-users" id="select-all" type="checkbox"></th>
        <th scope="col">
          <div class="d-flex align-items-center">
            <a href="{{urls.firstname}}">Firstname</a>
            /
            <a href="{{urls.lastname}}">Lastname</a>
          </div>
        </th>
        <th scope="col"><a href="{{urls.email}}">Email address</a></th>
        <th scope="col">Role</th>
        <th scope="col">DocSpace user status</th>
        <th scope="col">DocSpace user type</th>
      </tr>
    </thead>
    <tbody>
      {{#users}}
        <tr>
          <th scope="row"><input type="checkbox" name="users" value="{{id}}"></th>
          <td>{{fullname}}</td>
          <td>{{email}}</td>
          <td>{{role}}</td>
          <td>
            {{#status}}
              <img src="{{status}}">
            {{/status}}
          </td>
          <td>{{type}}</td>
        </tr>
      {{/users}}
    </tbody>
  </table>
  <div>
    {{#paginator}}
      {{{.}}}
    {{/paginator}}
  </div>
  <div>
    <button
      type="button"
      data-action="invite-to-docspace"
      class="btn btn-primary"
      >
      {{#str}} invitetodocspace, mod_onlyofficedocspace {{/str}}
    </button>
  </div>
  <div class="d-none">
    <div id="ds-system-frame"></div>
  </div>
</div>
