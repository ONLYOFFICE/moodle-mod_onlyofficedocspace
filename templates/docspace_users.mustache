<div class="d-flex flex-column" style="row-gap: 16px;">
  <p class="m-0">{{#str}} docspaceuserscategory:description, mod_onlyofficedocspace, {{#str}} invitetodocspace, mod_onlyofficedocspace {{/str}} {{/str}}</p>
  <table id="ds-invite-users-table" class="table table-striped m-0">
    <thead>
      <tr>
        <th scope="col"><input id="check-all-users" type="checkbox"></th>
        <th scope="col">
          <div class="ds-sort-buttons">
            <button type="button" data-sort-index="1">{{#str}} firstname {{/str}}</button>
            /
            <button type="button" data-sort-index="1">{{#str}} lastname {{/str}}</button>
          </div>
        </th>
        <th scope="col">
          <div class="ds-sort-buttons">
            <button type="button" data-sort-index="2">{{#str}} email {{/str}}</button>
          </div>
        </th>
        <th scope="col">
          <div class="ds-sort-buttons">
            <button type="button" data-sort-index="3">{{#str}} role {{/str}}</button>
          </div>
        </th>
        <th scope="col">
          <div class="ds-sort-buttons">
            <button type="button" data-sort-index="4">{{#str}} docspaceuserstatus, mod_onlyofficedocspace {{/str}}</button>
          </div>
        </th>
        <th scope="col">
          <div class="ds-sort-buttons">
            <button type="button" data-sort-index="5">{{#str}} docspaceusertype, mod_onlyofficedocspace {{/str}}</button>
          </div>
        </th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>

  <div>
    <button
      type="button"
      class="btn btn-primary action-buttons"
      id="invite-to-docspace"
      disabled
      >
      {{#str}} invitetodocspace, mod_onlyofficedocspace {{/str}}
    </button>
    <button
      type="button"
      class="btn btn-secondary action-buttons"
      id="unlink-docspace-account"
      disabled
      >
      {{#str}} unlinkdocspaceaccount, mod_onlyofficedocspace {{/str}}
    </button>
  </div>

  <nav>
    <ul id="pagination" class="pagination"></ul>
  </nav>
</div>