{{!
    @template mod_onlyofficedocspace/login_modal

    Template purpose and description.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
    }
}}
{{< core/modal }}
    {{$title}}{{#str}} login {{/str}}{{/title}}
    {{$body}}
        <div id="docspace-login-header">
            <div id="docspace-login-header-icon">
                {{#pix}} moodle_docspace, mod_onlyofficedocspace, Moodle and ONLYOFFICE DocSpace {{/pix}}
            </div>
            <p>
                {{#str}} loginmodal:title, mod_onlyofficedocspace {{/str}}
                <a href="{{url}}" target="_blank">{{url}}</a>
            </p>
        </div>
        <div class="container">
            <form> 
                <p>{{#str}} loginmodal:description, mod_onlyofficedocspace {{/str}}</p>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <input type="email" class="form-control" value="{{email}}" id="ds-login-email" placeholder="{{#str}} email {{/str}}">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <input type="password" class="form-control" id="ds-login-password" placeholder="{{#str}} password {{/str}}">
                    </div>
                </div>
                <div style="display:none;" id="ds-login-error" class="alert alert-danger" role="alert">
                    {{#str}} validationerror:password, mod_onlyofficedocspace {{/str}}
                </div>
            </form>
            <div class="d-none"><div id="ds-login-frame"></div></div>
        </div>
    {{/body}}
    {{$footer}}
        <button id="ds-login-submit" type="button" class="btn btn-primary">{{#str}} login {{/str}}</button>
        <button id="ds-login-cancel" type="button" class="btn btn-secondary">{{#str}} cancel {{/str}}</button>
    {{/footer}}
{{/ core/modal }}